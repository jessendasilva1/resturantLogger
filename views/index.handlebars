<div id="rootDiv" class="container-fluid d-flex flex-row justify-content-center">
    <div id="toBeDevoured" class="col-4">
        {{> burger}}
    </div>
    <div id="burgerSubmitDiv" class="d-flex flex-column justify-content-center align-items-center col-4">
        <div id="title" class="d-flex flex-column justify-content-center align-items-center">
            <img src="/imgs/burger.jpg" height="200px" width="200px" alt="burgerImage">
            <h2>Eat-Da-Burger!!</h2>
        </div>
        <div id="burgerInputForm" class="d-flex">
            <input id="burgerName" type="text" placeholder="Enter Name of a Burger">
            <input id="submitButton" type="submit">
        </div>
    </div>
    <div id="devouredBurgers" class="col-4">
        {{> eaten}}
    </div>
</div>

<script src="js/main.js" type="text/javascript"></script>